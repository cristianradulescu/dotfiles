export EDITOR=vim

alias ls='ls --color=always'
alias ll='ls -alh --color=always'

alias zshrc='${=EDITOR} ~/.zshrc' # Quick access to the ~/.zshrc file

alias grep='grep --color'
alias ip='ip -c'

alias lazydocker="docker run --rm -it --name lazydocker -v /var/run/docker.sock:/var/run/docker.sock -v $(pwd)/.config/:/.config/jesseduffield/lazydocker lazyteam/lazydocker"

# Update NVim from sources - https://github.com/neovim/neovim/wiki/Building-Neovim#quick-start
alias upd-nvim-check="cd ~/Development/neovim && git pull && cd"
alias upd-nvim-do="cd ~/Development/neovim && git pull && make CMAKE_BUILD_TYPE=RelWithDebInfo && cd build && cpack -G DEB && sudo dpkg -i nvim-linux64.deb && cd"
